@model Software_Project_Estimation_Tool.Areas.COCOMOII.Models.ProductivityRateModel
@{
    ViewBag.Title = "ProductivityRate";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    //if (Session["Model"] == null)
    //{
    //    Response.Redirect("~/Home/Index");
    //}

}


<style>
   

    .btn-default {
        width:100%;
        height:100%;
    }
</style>

<div class="jumbotron-n">

    <header>
        <h2><b>PRODUCTIVITY RATE</b></h2>
        <h4><i>Rate your project developer's experience and capability from Very Low to Very High.</i></h4>

    </header>

    <br />
    <h4>
        Productivity rate is based on  Developers Experience and Capability, which is rated from Very Low to Very High by the user. As the Developers Experience and Capability increased Productivity rate is also incresed.


    </h4>
    <br />

    @using (Html.BeginForm())
    {


        <h4><b>DEVELOPER EXPERIENCE & CAPABILITY </b></h4>
        <p>What is the level of your developer's <br />experience and capability? </p>
        <h3>
            @Html.DropDownListFor(m => m.DEVELOPER_EXPERIENCE_VALUE, Model.DEVELOPER_EXPERIENCE, "Select", new { @class = "btn btn-lg btn-default" })
            @Html.ValidationMessageFor(m => m.DEVELOPER_EXPERIENCE_VALUE, "", new { @class = "text-error" })
        </h3>



        <br />
        <br />

        <br />
        <br />

        <br />
        <br />

        <hr />
        <input type="submit" value="Calculate" class="btn btn-lg btn-fad2 pull-right" />



    }

    <br />
    <br />
