@model IEnumerable<Software_Project_Estimation_Tool.Models.Project>
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["user"] == null)
    {
        Response.Redirect("~/Home/Index");
    }

}
<script src="~/Alert Script/alert.js"></script>







<br />
<div class="jumbotron-m">
    <header >
      
            
               
                    <h1 class=""><span class="glyphicon glyphicon-user" ></span> @Session["user"] </h1>
            

            
    </header>



    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="@Url.Action("UserProfile", "Home",new { area = "" })" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="#AccountOverview" class="list-group-item"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Account Overview <span class="badge"></span></a>
                        <a href="#UserInfo" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> User Info <span class="badge"></span></a>
                        <a href="#Projects" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Projects <span class="badge"></span></a>
                    </div>

                </div>
                <div class="col-md-9">
                    <!-- Account Overview -->
                    <div id="AccountOverview" class="panel panel-default text-black">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Account Overview</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                            <div class="col-md-4">
                                <div class="well dash-box">
                                    <h2><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span> Orgnization </h2>
                                    <h4>@Session["org"]</h4>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="well dash-box">
                                    <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Position </h2>
                                    <h4>@Session["pos"]</h4>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="well dash-box">
                                    <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Projects </h2>
                                    <h4>@ViewBag.v</h4>
                                </div>
                            </div>

                        </div>
                    </div>
                        </div>
                    <!--User Info -->
                    <div id="UserInfo" class="panel panel-default" style="height:inherit">
                        <div class="panel-heading">
                            <h3 class="panel-title">User Info</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row" style="margin-left:1%;">
                                <div>
                                    <h5><b>Name:</b> @Session["user"]</h5>
                                    <h5><b>Email:</b> @Session["email"]</h5>
                                    <h5><b>Orgnization:</b> @Session["org"]</h5>
                                    <h5><b>Postion:</b> @Session["pos"]</h5>
                                </div>
                             


                            </div>
                        </div>
                    </div>



                    <div id="Projects" class="panel panel-default" >
                        <div class="panel-heading">
                            <h3 class="panel-title">Projects</h3>
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover text-black">
                                <tr>
                                    <th>Project ID</th>
                                    <th>Estimation Technique</th>
                                    <th colspan="2">ProjectName</th>
                                    
                                </tr>

                                @foreach (var p in Model)
                {
                                <tr>

                                    <td>
                                        <label>@p.ID</label>
                                    </td>
                                    <td>
                                        <label>@p.Technique</label>
                                    </td>
                                    <td>
                                        <label>@p.ProjectName</label>
                                    </td>
                                    <td>
                                        @Html.ActionLink("View Details", "Display", "Home", new { id = p.ID }, null)
                                    </td>
                                    <td>
                                        @Html.ActionLink("delete", "Delete", "Home", new { id = p.ID }, null)
                                    </td>
                                </tr>
}



                            </table>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </section>


</div>
