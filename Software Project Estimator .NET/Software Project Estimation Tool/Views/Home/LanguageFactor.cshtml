@model Software_Project_Estimation_Tool.Models.LanguageFactorModel
@{
    ViewBag.Title = "LanguageFactor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["resultValueAdjustmentFactors"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}




<style>
    .dropdown-toggle {
        width: 75%;
    }
    .text-black {
        color: #ffd800;
    }
</style>

<div class="jumbotron-o">


    <header>

        <h2><b>LANGUAGES FACTOR</b></h2>

        <h4><i> Select a Programing Language used in your project.</i></h4>

    </header>


    <br />
    <h4>
        The language factor is simply the average number of Source Lines
        of Code per function point in the completed project. These factors are calculated by dividing the
        effective code count for a completed project by the final function point count. SLOC counts represent
        logical, not physical line counts.
        Language factors used in conversion of function points to Line of code (LOC) during the earliy stages of development.
    </h4>
    <br />
    @using (Html.BeginForm())
    {


        <h4 class="text-black"><b>PROGRAMMING LANGUAGE</b></h4>
        <p> Which language youe are use going<br /> to develop your project ?</p>
        <h3>
            @Html.DropDownListFor(m => m.LANGUAGE_FACTOR_VALUE, Model.LANGUAGE_FACTOR, "Select", new { @class = "btn btn-default btn-lg dropdown-toggle " })
            @Html.ValidationMessageFor(m => m.LANGUAGE_FACTOR_VALUE, "", new { @class = "text-error" })

        </h3>


        
        <br />
        <br />
        <br />



        <br />
        <br />
        <hr />
        <p> <input type="submit" value="Calculate Size" class="btn btn-fad4 btn-lg pull-right" /></p>

    }

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

</div>