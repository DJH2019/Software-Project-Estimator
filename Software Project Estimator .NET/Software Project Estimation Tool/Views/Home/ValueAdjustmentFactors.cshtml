                                    @Html.DropDownListFor(m => m.FACTOR_DC_VALUE, Model.FACTOR_DC, new { @class = "btn btn-default" })
                                    @Html.ValidationMessageFor(m => m.FACTOR_DC_VALUE, "", new { @class = "  text-error" })
                                </td>
                            </tr>

                            <tr>
                                <td><b class="text-black">DISTRIBUTED DATA PROCESSING</b><br /> How are distributed data and processing functions handled?</td>
