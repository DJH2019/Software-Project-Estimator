@model Software_Project_Estimation_Tool.Models.ValueAdjustmentFactorsModel
@{
    ViewBag.Title = "ValueAdjustmentFactors";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["resultUnadjustedFuctionPoints"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
}


<style>

    .text-black {
        color:#ffd800;
    }

    .btn-default {
    
        width:100px;
    }

</style>


<div class="jumbotron-o">


    <header>
        <h2><b>VALUE ADJUSTMENT FACTOR</b></h2>
        <h4><i>Rate the following factors from 0-5, 0 means, the component is not relevant to the system and 5 means, <br /> component is essential: </i></h4>
    </header>


    <br />

    <br />
    @using (Html.BeginForm())
